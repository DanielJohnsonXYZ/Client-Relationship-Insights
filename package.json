  "dependencies": {
    "@anthropic-ai/sdk": "^0.62.0",
    "@next/env": "^15.5.3",
    "@supabase/supabase-js": "^2.57.4",
    "googleapis": "^159.0.0",
    "next": "15.5.3",
    "next-auth": "^4.24.11",
    "react": "19.1.0",
    "react-dom": "19.1.0",
    "resend": "^6.1.0",
    "zod": "^4.1.9"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3",
    "@tailwindcss/postcss": "^4",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^16.1.0",
